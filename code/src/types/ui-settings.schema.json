{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "branding": {
            "type": "object",
            "properties": {
                "navbarLogo": {
                    "type": [
                        "string",
                        "array"
                    ]
                },
                "navbar": {
                    "type": [
                        "string",
                        "array"
                    ]
                }
            },
            "required": [
                "navbarLogo",
                "navbar"
            ]
        },
        "modules": {
            "type": "object",
            "properties": {
                "landing": {
                    "type": "boolean"
                },
                "map": {
                    "type": "boolean"
                },
                "dashboard": {
                    "type": "boolean"
                },
                "help": {
                    "type": "boolean"
                },
                "registry": {
                    "type": "boolean"
                }
            },
            "required": [
                "landing",
                "map",
                "dashboard",
                "help",
                "registry"
            ]
        },
        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "caption": {
                        "type": "string"
                    },
                    "permission": {
                        "type": "string"
                    }
                },
                "required": [
                    "url",
                    "title",
                    "icon",
                    "type"
                ]
            }
        },
        "resources": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string"
                    },
                    "data": {
                        "type": "string"
                    },
                    "paths": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "url"
                ]
            }
        }
    },
    "required": [
        "branding",
        "modules"
    ]
}